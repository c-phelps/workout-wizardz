<div class="full-width-container m-4">
  {{! <div class="title is-4">Select Date:</div> }}
  <div class="columns is-centered">
    <div class="column is-half">
      <div class="field">
        <label class="label title is-4">Select Date:</label>
        <div class="control">
          <input type="date" id="select-date" class="input is-centered" />
        </div>
      </div>
    </div>
  </div>
  <div class="title is-4">Muscle Groups:</div>
  <div class="columns is-multiline">
    {{#each muscleGroups}}
      <div class="column is-one-quarter">
        <button class="muscle-group button is-warning is-fullwidth is-uppercase" data-muscle-group="{{this}}">
          {{this}}
        </button>
      </div>
    {{/each}}
  </div>
  <div class="title is-4 is-hidden muscle-title">Selected muscle group:</div>
  <div class="columns is-centered">
    <div class="column is-flex is-justify-content-center">
      <figure class="image"  style="width: 25%; height: auto;">
        <img id="muscle-image" alt="Musclegroup Image" class="is-hidden image" >
      </figure>
    </div>
  </div>
  <div class="title is-4 is-hidden muscle-title">Exercises:</div>
  <div class="columns is-multiline" id="exercises-list"></div>
  <div class="columns" id="exercise-data"></div>
  <div class="title is-4 exercise-title is-hidden">Your exercises for this workout:</div>
  <div class="columns is-multiline" id="selected-exercises"></div>
  <div class="columns is-centered">
    <div class="column is-three-quarters">
      <button id="btn-save" class="button is-warning is-fullwidth is-hidden"><span class="icon is-small"></span>
      <i class="fas fa-check"></i>
    </span>
    <span> Save your workout!</span></button>
    </div>
  </div>
  <script src="/js/exercise.js"></script>
</div>