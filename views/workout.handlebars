<div class="title is-3">{{user}}</div>
<div class="columns is-multiline">
  {{#each workouts as |workout|}}
    <div class="column is-one-quarter">
      <div class="card" data-id="{{workout.id}}">
        <div class="card-content">
          <p class="title is-5">{{workout.date}}</p>
          {{#each workout.exercises as |exercise|}}
            <div class="exercise">
              <button class="button is-fullwidth" data-workout-id="{{workout.id}}" data-exercise-id="{{exercise.id}}">
                {{exercise.Name}}
              </button>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  {{/each}}
</div>

<div class="modal" id="exercise-modal">
  <div class="modal-baground"></div>
  <div class="modal-card">
    <header class="modal-card-head">
      <p class="modal-card-title">Add/Update Exercise</p>
      <p class="modal-card-title" id="exercise-name"></p>
      <button class="delete" aria-label="close"></button>
    </header>
    <section class="modal-card-body">
      <form id="exercise-form">
        <input type="hidden" id="workout-id" name="workoutId" />
        <input type="hidden" id="exercise-id" name="exerciseId" />
        <div class="field">
          <label class="label" for="notes">Notes:</label>
          <div class="control">
            <textarea class="textarea" id="notes" name="notes" placeholder="Notes">
            </textarea>
          </div>
        </div>
        <div class="field">
          <div class="control">
            <button class="button is-primary" type="submit">Save</button>
          </div>
        </div>
      </form>
    </section>
  </div>
</div>

<button class="button">Add Workout</button>
<script src="js/workout.js"></script>