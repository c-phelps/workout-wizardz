{{#extend "main"}}
{{#block "body"}}
    <section class="hero is-medium is-primary is-bold">
        <div class="hero-body">
            <div class="container">
                <p class="title">A Web Application Where You Can Track Your Everyday Workout Routines.</p>
            </div>
        </div>
    </section>

    <main class="section">
        <div class="container">

            {{#if logged_in}}
                <p>Welcome back! Check out your latest workout routines.</p>
            {{else}}
                <p>Please log in to track your workouts.</p>
                <a href="/login" class="button is-primary">Login</a>
            {{/if}}

            <section class="posts">

                {{#if posts.length}}
                    {{#each posts}}
                    <article class="box">
                        <h2 class="title is-4">{{this.title}}</h2>
                        <p>{{this.content}}</p>
                        <a href="/post/{{this.id}}" class="button is-link">Read more</a>
                    </article>
                    {{/each}}
                {{else}}
                    <p class="has-text-centered">No posts available at the moment. Please check back later.</p>
                {{/if}}
            </section>

        </div>
    </main>

{{/block}}
{{/extend}}